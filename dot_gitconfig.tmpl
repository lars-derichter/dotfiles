[commit]
	gpgsign = true
{{- if eq .chezmoi.os "darwin" }}
[core]
	editor = code --wait
[gpg]
	program = /usr/local/bin/gpg
{{- else if eq .chezmoi.os "linux" }}
[core]
	editor = nano
{{ end }}
	autocrlf = input
[user]
	name = {{ .fullname }}
	email = {{ .email }}
	signingkey = 306A874F98AFF064 
[pull]
    rebase = false
[init]
	defaultBranch = main
