# Function to install a package if it's not installed
install_if_missing() {
    local package=$1
    if ! command -v $package &>/dev/null; then
        echo "$package is not installed. Installing..."
        brew install $package
    else
        echo "$package is already installed."
    fi
}
{{- end }}

# Ensure gnu-go is installed
install_if_missing "1password-cli"
install_if_missing "gnupg"

/usr/local/bin/gpg --import ~/.gnupg/private.key
expect -c "spawn gpg --edit-key 306A874F98AFF064 trust quit; send \"5\ry\r\"; expect eof"
rm ~/.gnupg/private.key

echo "\nCheck if key is shown with ultimate trust and correct identity"
/usr/local/bin/gpg --list-keys

# (re)start gpg-agent
killall gpg-agent
gpg-agent --daemon
